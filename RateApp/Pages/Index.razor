@page "/"
@using System.Text;
@using System.Net.Http.Headers;
@using Microsoft.AspNetCore.Components;
@using Newtonsoft.Json;

@using RateApp.Models;
 
 
 
<table class="table">
    <thead>
        <tr>
           
            <th>Year</th>
             
            <th>Interest p.a</th>


            <th>Sr Interest p.a</th>
             
